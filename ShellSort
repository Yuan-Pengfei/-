public static void ShellSort(int[] a){
    int gap=a.length/2;
    while(gap>=1){
        for(int x=0;x<gap;x++){           //每次希尔排序的组数为gap
            for(int i=x+gap;i<a.length;i=i+gap){
                int temp=a[i];
                int j;
                for(j=i-gap;j>=0&&a[j]>temp;j=j-gap){
                    a[j+gap]=a[j];
                }
                a[j+gap]=temp;
            }
        }
        gap/=2;
    }
}
